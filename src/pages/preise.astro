---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";

const pricing = [
  {
    name: "3 Tage",
    price: "50€",
    features: [
    "An-und Abreisetag 15€",
    "volle Tage 20€"
    ],
  },
  {
    name: "8 Tage",
    price: "150€",
    features: [
    "An-und Abreisetag 15€",
    "volle Tage 20€"
    ],
  },
  {
    name: "14 Tage",
    price: "270€",
    features: [
    "An-und Abreisetag 15€",
    "volle Tage 20€"
    ],
  },
];
---

<Layout title="Preise">
  <Container>
    <Sectionhead>
      <Fragment slot="title" class="text-white">Preisliste</Fragment>
      <Fragment slot="desc"> </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12 mb-20">
      {pricing.map((item) => <Pricing plan={item} />)}
    </div>

    <section class="max-w-screen-lg mx-auto mt-16">
      <div class="grid md:grid-cols-2 gap-10">
        <div>
          <h3 class="text-[1.5rem] font-semibold mb-4">Das sollte jeder Kunde mitbringen:</h3>
          <ul class="list-disc list-inside">
            <li> ausreichend Futter für die Dauer des Aufenthalts</li>
            <li> ein gut sitzendes Halsband</li>
          </ul>
        </div>
        <div>
          <h3 class="text-[1.5rem] font-semibold mb-4">Falls notwendig:</h3>
          <ul class="list-disc list-inside">
            <li> eigene Kauartikel (bei Allergikern)</li>
            <li> Medikamente</li>
            <li> Maulkorb</li>
            <li> Regen-/Wintermantel</li>
          </ul>
        </div>           
      </div>
    </section>
  </Container>
</Layout>
